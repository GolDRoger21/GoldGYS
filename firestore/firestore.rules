rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Yardımcı Fonksiyonlar ---
    function signedIn() {
      return request.auth != null;
    }
    
    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return signedIn() && (
        (request.auth.token.keys().hasAny(['admin']) && request.auth.token.admin == true) || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    function isEditor() {
      return isAdmin() || (
        signedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor'
      );
    }

    // --- KULLANICILAR (users) ---
    match /users/{uid} {
      // Okuma: Kişi kendisi ise veya Admin ise okuyabilir
      allow read: if isSelf(uid) || isAdmin();
      
      // Oluşturma (Yeni Üyelik):
      // 1. Kişi kendisi olmalı
      // 2. Rolü 'user' olarak gelmeli
      // 3. Statüsü 'pending' (onay bekliyor) olarak gelmeli
      allow create: if isSelf(uid) 
                    && request.resource.data.role == 'user'
                    && request.resource.data.status == 'pending';
      
      // Güncelleme: 
      // Admin her şeyi güncelleyebilir.
      // Kullanıcı sadece profil resmi ve adını güncelleyebilir.
      // updatedAt alanına da izin veriyoruz ki timestamp güncellemeleri patlamasın.
      allow update: if isAdmin() ||
        (
          isSelf(uid) && 
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['displayName', 'photoURL', 'email', 'lastLoginAt', 'updatedAt'])
        );
      
      allow delete: if isAdmin();
      
      match /{subcollection=**} {
         allow read, write: if isSelf(uid) || isAdmin();
      }
    }

    // --- SİSTEM & DİĞER KOLEKSİYONLAR ---
    match /system/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /topics/{topicId} {
      allow read: if signedIn();
      allow write: if isEditor();
    }

    match /exams/{examId} {
      allow read: if signedIn();
      allow write: if isEditor();
    }
    
    match /questions/{questionId} {
      allow read: if signedIn();
      allow write: if isEditor();
    }

    match /reports/{reportId} {
      allow create: if signedIn();
      allow read, update, delete: if isEditor();
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}