{
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "function": "sitemap"
      },
      {
        "source": "/dashboard",
        "destination": "/pages/dashboard.html"
      },
      {
        "source": "/konular",
        "destination": "/pages/konular.html"
      },
      {
        "source": "/konu/**",
        "destination": "/pages/konu.html"
      },
      {
        "source": "/test",
        "destination": "/pages/test.html"
      },
      {
        "source": "/test/**",
        "destination": "/pages/test.html"
      },
      {
        "source": "/denemeler",
        "destination": "/pages/denemeler.html"
      },
      {
        "source": "/deneme/**",
        "destination": "/pages/deneme.html"
      },
      {
        "source": "/analiz",
        "destination": "/pages/analiz.html"
      },
      {
        "source": "/profil",
        "destination": "/pages/profil.html"
      },
      {
        "source": "/yanlislarim",
        "destination": "/pages/yanlislarim.html"
      },
      {
        "source": "/favoriler",
        "destination": "/pages/favoriler.html"
      },
      {
        "source": "/yardim",
        "destination": "/pages/yardim.html"
      },
      {
        "source": "/yasal",
        "destination": "/pages/yasal.html"
      },
      {
        "source": "/pending-approval",
        "destination": "/pages/pending-approval.html"
      },
      {
        "source": "/report",
        "destination": "/pages/report.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' https://apis.google.com https://www.gstatic.com https://www.google.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com; script-src 'self' 'unsafe-inline' https://apis.google.com https://www.gstatic.com https://www.google.com https://www.googletagmanager.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://cdn.sheetjs.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://lh3.googleusercontent.com https://www.google.com; connect-src 'self' https://apis.google.com https://www.gstatic.com https://www.google.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://firebase.googleapis.com https://www.google-analytics.com;"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/serviceAccountKey.json",
      "**/*.log",
      "**/.DS_Store"
    ]
  }
}
